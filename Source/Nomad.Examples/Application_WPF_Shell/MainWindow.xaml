<Window x:Class="Application_WPF_Shell.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Regions="clr-namespace:Nomad.Regions;assembly=Nomad" Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ToolBarTray  Regions:RegionManager.RegionName="toolbarRegion" Grid.Row="0">
            
        </ToolBarTray>
            <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <ItemsControl Regions:RegionManager.RegionName="leftSideMenu" Grid.Column="0"/>
        <ItemsControl Regions:RegionManager.RegionName="rightSideMenu" Grid.Column="2"/>
        <TabControl Regions:RegionManager.RegionName="mainTabs" Grid.Column="1"/>
    </Grid>
        <StatusBar  Regions:RegionManager.RegionName="statusBarRegion" Grid.Row="2">
            
        </StatusBar>
    </Grid>
</Window>
