<Window x:Class="WPFHostApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" Height="385" Width="364">
    <Grid Width="314" Height="342">
        <Label Margin="0,0,105,0"> This is a host application</Label>
        <CheckBox Content="is Threaded" Height="16" HorizontalAlignment="Left" Margin="12,53,0,0" Name="threadedCheckBox" VerticalAlignment="Top" Width="148" />
        <CheckBox Content="is in a new AppDomain" Height="16" HorizontalAlignment="Left" Margin="12,83,0,0" Name="newDomainCheckBox" VerticalAlignment="Top" Width="148" />
        <ListBox Height="187" ItemsSource="{Binding}" HorizontalAlignment="Left" Margin="12,143,0,0" Name="containerListBox" VerticalAlignment="Top" Width="290" />
        <Button Content="Run" Height="23" HorizontalAlignment="Left" Margin="227,12,0,0" Name="runButton" VerticalAlignment="Top" Width="75" Click="RunButtonClick" />
        <Label Content="Container:" Height="28" HorizontalAlignment="Left" Margin="12,117,0,0" Name="label1" VerticalAlignment="Top" />
    </Grid>
</Window>
